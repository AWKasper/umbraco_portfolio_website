@using Umbraco.Cms.Web.Common.PublishedModels;
@model Portfolio.Core.Models.ViewModels.BlogArticleViewModel
@{
	Layout = "Main.cshtml";
	
	ViewBag.Title = "Article";
}

@Model.Title

@Model.Author

@{
    var typedMediaPickerSingle = Model.AuthorPicture;
    if (typedMediaPickerSingle != null)
    {
        <img src="@typedMediaPickerSingle" style="width:200px" alt="@typedMediaPickerSingle" />
    }
}

@Model.BodyText